{
  "expo": {
    "name": "nfc-scavenger-hunt",
    "slug": "nfc-scavenger-hunt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nfchunt",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "deepLinks": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shaimr.nfcscavengerhunt",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b7b216f4-fb78-4c02-aa28-be52f939e4e4"
      }
    },
    "fonts": [
      {
        "asset": "assets/fonts/Inter-Regular.ttf",
        "family": "Inter"
      },
      {
        "asset": "assets/fonts/Inter-Medium.ttf",
        "family": "Inter-Medium"
      },
      {
        "asset": "assets/fonts/Inter-Bold.ttf",
        "family": "Inter-Bold"
      }
    ]
  }
}
